extends index

block site
  form(action="/add" method="POST" enctype="multipart/form-data")
    label(for="name") Name
    input(type="text", name="name")
    label(for="photo") Photo
    input(type="file" name="photo" id="photo" accept="image/gif, image/png, image/jpeg")
    label(for="address") Address
    input(type="text" id="address" name="location[address]")
    label(for="lng") Address Lng
    input(type="text" id="lng" name="location[coordinates][0]")
    label(for="lat") Address Lat
    input(type="text" id="lat" name="location[coordinates][1]")
    - const choices = ['Fast food', 'Sushi', 'Cafe', 'Cheap', 'Exclusive', 'Pizza']
    ul.tags
      each choice in choices
        .tag.tag__choice
          input(type="checkbox" id=choice value=choice name="tags")
          label(for=choice) #{choice}
    input(type="submit" value="Save" class="button")